<h1>SDP Pitch Booking</h1>
<div class="row">
  <% @rooms.each do |room| %>
  <div class="large-6 columns">
    <h2><%= room.name %></h2>
    <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th width="250">Time</th>
          <th width="500">Group</th>
        </tr>
      </thead>
      <tbody>
        <% room.slots.where("end_time >= ?", Time.now).limit(10).each do |slot| %>
            <tr>
              <td>
                <%= slot.start_time.to_formatted_s(:long) %> - <%= slot.end_time.to_formatted_s(:time) %>
              </td>
              <td>
                <%= slot.group.name unless slot.group.nil? %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <% end %>
</div>
<script>
  setInterval(function() {location.reload(true); }, 60 * 1000);
</script>
